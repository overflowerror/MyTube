{% extends 'base.html.twig' %}

{% block title %}Links{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/admin.css") }}">
{% endblock %}

{% block body %}
    <div class="users bg-light shadow-5">
        <table class="table">
            <tr>
                <th>
                    <input type="checkbox">
                </th>
                <th>
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Roles
                </th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>
                        <input type="checkbox">
                    </td>
                    <td>
                        <img
                                src="{{ path("app_user_profile_picture", {"username": user.username}) }}"
                                class="rounded-circle avatar"
                                alt=""
                        />
                    </td>
                    <td>
                        {{ user.name }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {% for role in user.getReadableRoles() %}
                            <div class="customChip">{{ role }}</div>
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="addButton">
        <button type="button" class="btn btn-primary btn-floating">
            <i class="fas fa-plus"></i>
        </button>
    </div>
{% endblock %}